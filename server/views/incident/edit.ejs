<%- include('../partials/header.ejs')%>
<%- include('../partials/main_nav.ejs')%>
<!--Content for the edit Operation-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1 style = "color:white"><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="typeTextField"style = "color:white">Incident Type</label>
                    <!--<input type="text" class="form-control" id="typeTextField" placeholder="Enter incident type" name="type" value="<%= incidentModel.type %>" required>-->
                    <select type="text" class="form-control" id="typeTextField" placeholder="Enter incident type" name="type" required>
                        <option value="Verbal Altercation" <%= incidentModel.type === 'Verbal Altercation' ? 'selected' : '' %>>Verbal Altercation</option>
                        <option value="Physical Altercation" <%= incidentModel.type === 'Physical Altercation' ? 'selected' : '' %>>Physical Altercation</option>
                        <option value="Property Damage" <%= incidentModel.type === 'Property Damage' ? 'selected' : '' %>>Property Damage</option>
                        <option value="Human Error" <%= incidentModel.type === 'Human Error' ? 'selected' : '' %>>Human Error</option>
                        <option value="Workplace Injury" <%= incidentModel.type === 'Workplace Injury' ? 'selected' : '' %>>Workplace Injury</option>
                        <option value="Other" <%= incidentModel.type === 'Other' ? 'selected' : '' %>>Other</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="timeTextField"style = "color:white">Incident Time</label>
                    <input type="datetime-local" class="form-control" id="timeTextField" placeholder="Enter the time of the incident" name="time" value="<%= incidentModel.time %>" required>
                </div>
                <div class="form-group">
                    <label for="locationTextField"style = "color:white">Incident Location</label>
                    <input type="text" class="form-control" id="locationTextField" placeholder="Enter location" name="location" value="<%= incidentModel.location %>" required>
                </div>
                <div class="form-group">
                    <label for="involvedPartiesTextField"style = "color:white">Involved Parties</label>
                    <input type="text" class="form-control" id="involvedPartiesTextField" placeholder="Enter involved parties" name="involvedParties" value="<%= incidentModel.involvedParties %>" required>
                </div>
                <div class="form-group">
                    <label for="overviewTextField"style = "color:white">Incident Overview</label>
                    <textarea type="text" class="form-control" id="overviewTextField" placeholder="Enter incident overview" name="overview" required><%= incidentModel.overview %></textarea>
                </div>
                <div class="form-group">
                    <label for="damagesTextField"style = "color:white">Incident Damages</label>
                    <input type="text" class="form-control" id="damagesTextField" placeholder="Enter incident damages" name="damages" value="<%= incidentModel.damages %>" required>
                </div>
                <div class="form-group">
                    <label for="stateTextField"style = "color:white">Incident State</label>
                    <select type="text" class="form-control" id="stateTextField" placeholder="Enter incident state" name="state" required>
                        <option value="Active" <%= incidentModel.state === 'Active' ? 'selected' : '' %>>Active</option> <!-- determines if the current state is active or if this option if selected and passes the value "Active"-->
                        <option value="Addressed" <%= incidentModel.state === 'Addressed' ? 'selected' : '' %>>Addressed</option> <!-- determines if the current state is Addressed or if this option if selected and passes the value "Addressed"-->
                    </select>
                </div>
                <br>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>
                &nbsp;
                <button class="btn btn-warning" type="button" 
                 onclick="window.history.back()">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs')%>
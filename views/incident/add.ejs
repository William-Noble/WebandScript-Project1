<%- include('../Partials/header.ejs')%>
<%- include('../Partials/main_nav.ejs')%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="typeTextField">Incident Type</label>
                    <input type="text" class="form-control" id="typeTextField" placeholder="Enter incident type" name="type" required>
                </div>
                <div class="form-group">
                    <label for="timeTextField">Incident Time</label>
                    <input type="datetime-local" class="form-control" id="timeTextField" placeholder="Enter the time of the incident" name="time" required>
                </div>
                <div class="form-group">
                    <label for="locationTextField">Incident Location</label>
                    <input type="text" class="form-control" id="locationTextField" placeholder="Enter location" name="location" required>
                </div>
                <div class="form-group">
                    <label for="involvedPartiesTextField">Involved Parties</label>
                    <input type="text" class="form-control" id="involvedPartiesTextField" placeholder="Enter involved parties" name="involvedParties" required>
                </div>
                <div class="form-group">
                    <label for="overviewTextField">Incident Overview</label>
                    <input type="text" class="form-control" id="overviewTextField" placeholder="Enter incident overview" name="overview" required>
                </div>
                <div class="form-group">
                    <label for="damagesTextField">Incident Damages</label>
                    <input type="text" class="form-control" id="damagesTextField" placeholder="Enter incident damages" name="damages" required>
                </div>
                <div class="form-group">
                    <label for="stateTextField">Incident State</label>
                    <input type="text" class="form-control" id="stateTextField" placeholder="Enter incident state" name="state" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include('../Partials/footer.ejs')%>